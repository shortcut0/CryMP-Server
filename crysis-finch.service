[Unit]
Description=Crysis CryMP Server (Meowrisa)
Requires=wine-server.service
After=wine-server.service
StartLimitIntervalSec=60s
StartLimitBurst=3

[Service]
Type=simple
KillMode=process
KillSignal=SIGINT
Restart=always
RestartSec=5s
SyslogIdentifier=%N
ExecStart=%h/Crysis/CryMP-Server/CryMP-Server64.exe -dir "C:\\Crysis\\" -root "C:\\Crysis\\CryMP-Server\\"

[Install]
WantedBy=default.target
